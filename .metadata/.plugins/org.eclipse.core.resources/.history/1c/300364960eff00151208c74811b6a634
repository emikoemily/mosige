	$page=isset($_GET['page'])?intval($_GET['page']):1;        //这句就是获取page=18中的page的值，假如不存在page，那么页数就是1。  
	$num=80;                                      //每页显示10条数据  

	//echo $_GET["name"];
	if($_GET["name"] != "") {
		$name = addslashes($_GET["name"]);
		$where .= " and member_name like '%{$name}%' ";
	}
