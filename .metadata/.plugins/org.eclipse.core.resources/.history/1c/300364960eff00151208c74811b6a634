echo "<font size=+3> 每页显示80条。当前页:{$page} 页数：";
$current;
	For($i=1;$i<=$pagenum;$i++){  
		   
		   $show=($i!=$page)?"<a href='view_account.php?page=".$i."'>$i   </a>":"<b>$i</b>";  
		   Echo $show." ";  
	}
	echo "</font>";
