		function updatedays($db,$payid,$howlong){
			
			$sqlupdatedays="UPDATE `yoga_lu`.`payment_table` SET `payment_days` ='{$howlong}' where `payment_id` ='{$payid}'";
		    $resupdatedays = $db->exec($sqlupdatedays);
			 
		
