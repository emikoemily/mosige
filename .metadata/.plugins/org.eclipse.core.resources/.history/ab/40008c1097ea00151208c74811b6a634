function GetDateStr(AddDayCount)
{
var dd = new Date();
var month=new Array(12)
month[0]="01"
month[1]="02"
month[2]="03"
month[3]="04"
month[4]="05"
month[5]="06"
month[6]="07"
month[7]="08"
month[8]="09"
month[9]="10"
month[10]="11"
month[11]="12"

dd.setDate(dd.getDate()+AddDayCount);//获取AddDayCount天后的日期
var y = dd.getFullYear();
var m = month[dd.getMonth()];//获取当前月份的日期
var d = dd.getDate();
return y+"-"+m+"-"+d;
} 
$tom= GetDateStr(1);
$tom2= GetDateStr(2);
$to= GetDateStr(0);
$yes= GetDateStr(-1);
$(document).ready(function(){
	$("#tomorrow").click(function(){

	$("#test1").text($tom);
 	 $("#startdate").val($tom);
  	$("#enddate").val($tom);
	});


	$("#tomafter").click(function(){

		$("#test1").text($tom2);
	 	 $("#startdate").val($tom2);
	  	$("#enddate").val($tom2);
		});
	$("#today").click(function(){

		$("#test1").text($to);
	 	 $("#startdate").val($to);
	  	$("#enddate").val($to);
		});
	$("#yestoday").click(function(){

		$("#test1").text($yes);
	 	 $("#startdate").val($yes);
	  	$("#enddate").val($yes);
		});
});
</script>
